<!DOCTYPE html>
<html lang="en">

<!-- HEAD -->
<%- include('../partials/head',{title : 'Creacion de productos'}) %>


<body class="boby__view__creacion">


  <%- include('../partials/header') %>

    <main class="estaCreacion">
     
      <form method="POST" enctype="multipart/form-data">
        
          <h1 class="esteTitulo">CREA TU PRODUCTO</h1>
          <div class="div_1">
            <label for="name"> Nombre </label>
            <input class="inputNombre" type="form_text" name="name" value="<%= (locals.old && old.name) && old.name %>">
            <small class="register__errors">
              <%= locals.errors && errors.name ? errors.name.msg : null %>
            </small>
          </div>

<div class="div_a">
        <div class="div_2">
          <label for="category"> Categoría </label>
          <select  class="inputCategoria" name="category"  id="">
            <option value=""  selected hidden>Seleccione...</option>
            <% categories.forEach(({name, id}) => { %>
              <option value="<%= id %>"><%= name %></option>
             <% }) %>
          </select>
          <small class="register__errors">
            <%= locals.errors && errors.category ? errors.category.msg : null %>
          </small>
        </div>
          <div class="div_4">
          <label for="visible">Visibilidad</label>
          <select  class="inputColor" name="visible" id="">
            <option value="1" selected>Visible</option>
            <option value="0">No visible</option>
          </select>
        </div>
    </div>
    <div class="div_b">
<!--         <p class="esteStock">Indique el stock disponible:</p>
        <div class="inputStock" ><input type=" number" class="numero" >Unidades</div> -->
      <div class="div_4">
        <label for="price"> Precio </label>
        <input type="number" class="inputPrecio" name="price" 
        value="<%= locals.old && old.price ? old.price : null %>">
        <small class="register__errors">
          <%= locals.errors && errors.price ? errors.price.msg : null %>
        </small>
       </div> 
       
       <div class="div_5">
        <label for="discount"> Descuento </label>
        <input type="number" class="inputDescuento" name="discount" >
        <small class="register__errors">
          <%= locals.errors && errors.discount ? errors.discount.msg : null %>
        </small>
      </div>
    </div>
      <div class="div_6">
        <label for="description"> Descripción </label>
        <textarea class="inputDescripcion" name="description" rows="5"></textarea>
        <small class="register__errors">
          <%= locals.errors && errors.description ? errors.description.msg : null %>
        </small>
      </div>
      <div class="div_7" >
        <label for="images"> Agrega 3 imágenes </label>
        <input class="inputimagen" type="file" name="images" multiple>
        <small class="register__errors">
          <%= locals.errors && errors.images ? errors.images.msg : null %>
        </small>
      </div>
      <div class="div_c">
      <div class="div_8">
          <button class="esteBoton1" type="reset">Resetear</button>
        </div>  
          <div class="div_9">  
          <button class="esteBoton2" type="submit">Crear</button>
      </div>
    </div>    
      </form>
    </main>

    <%- include('../partials/footer') %>

    <%- include('../partials/scripts')  %>
</body>

</html>